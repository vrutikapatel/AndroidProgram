<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/circularImageView"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:src="@drawable/album"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        app:civ_border_color="#000000"/>

    <Button
        android:id="@+id/btn_play"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/play_img"
        android:layout_below="@+id/circularImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/btn_pause"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@id/btn_play"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/btn_play"
        android:layout_toStartOf="@id/btn_play"
        android:layout_marginBottom="10dp"
        android:background="@drawable/pause_img"/>

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignEnd="@id/circularImageView"
        android:layout_alignRight="@id/circularImageView"
        android:layout_alignBottom="@id/btn_play"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="-50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/stop_img" />


</RelativeLayout>